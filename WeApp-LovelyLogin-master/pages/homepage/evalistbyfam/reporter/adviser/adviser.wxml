                    </view>
                </view>
                <view class="weui-article__section">
                    <view class="weui-article__h3">心率的建议</view>
                    <view class="weui-article__p">
                        <view class="rate"><text>{{rate_describe}}</text></view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class="line-css2"></view>
    <view class="weui-footer">
            <view class="weui-footer__links">
                <text>Ants的本次检查小建议</text>
            </view>
